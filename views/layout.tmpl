head
  meta(charset="UTF-8")
  meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0")
  meta(content='text/html; charset=utf-8' http-equiv='Content-Type')
  meta(content='IE=edge, chrome=1' http-equiv='X-UA-Compatible')

  title Todos

  link(rel="shortcut icon" href="/favicon.png")
  link(href='/stylesheets/todos.css' rel='stylesheet')
  link(href="/js/bower/fontawesome/css/font-awesome.min.css" rel="stylesheet")

  script(src="/js/bower/modernizr/modernizr.js")

body
  {{if-equal _page '/pages/index'}}
    {{view TodosView}}
      .todos-view
        //- header>h1 {title}
        header
          h1 {title}
        main
          input#entry(type="text" placeholder="What's next?" autofocus {{action change newTodo}})
          ul
            {{for todo in todos}}
              li
                input(type="checkbox" checked="{todo.done}")
                h2 {todo.title}
        footer
          {{if-equal todos.length 0}}
            span Nothing to do
          {{if-greater todos.length 0}}
            span {todos.length} Items left to do

  script(src="/js/bower/jquery/dist/jquery.min.js")
  script(src="/js/bower/underscore/underscore-min.js")
  script(src="/js/bower/backbone/backbone.js")
  script(src="/bundle.js" async)
