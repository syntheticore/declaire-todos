head
  meta(charset="UTF-8")
  meta(name="viewport" content="width=device-width, initial-scale=1")

  title Declaire.js • TodoMVC

  link(rel="stylesheet" href="/todomvc-common/base.css")
  link(rel="stylesheet" href="/todomvc-app-css/index.css")

body
  {{view TodosView}}
    section.todoapp
      header.header
        h1 todos
        input.new-todo(placeholder="What needs to be done?" autofocus {{action enter newTodo}})
      
      {{if todos.length}}
        section.main
          input.toggle-all(type="checkbox" {{action change markAllComplete}})
          label(for="toggle-all") Mark all as complete
          ul.todo-list
            {{for todos}}
              li
                {{if renaming}}
                  input.edit(value="{:title!}" {{action enter save}} {{action blur revert}})
                {{=>}}
                  .view.complete({{action doubleClick rename}})
                    input.toggle(type="checkbox" checked="{done!!}")
                    label {title}
                    button.destroy({{action click delete}})
        
        footer.footer
          span.todo-count
            strong {activeTodos.length}
            | items left
          ul.filters
            li>a.selected(href="/pages/all") All
            li>a(href="/pages/active") Active
            li>a(href="/pages/completed") Completed
          {{if completedTodos.length}}
            button.clear-completed({{action click clearCompleted}}) Clear completed
    
    footer.info
      p Double-click to edit a todo
      p Written by <a href="https://github.com/syntheticore">Björn Breitgoff</a>
      p Part of <a href="http://todomvc.com">TodoMVC</a>
    
  script(src="/todomvc-common/base.js")
