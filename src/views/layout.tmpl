head
  meta(charset="UTF-8")
  meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0")
  meta(content='text/html; charset=utf-8' http-equiv='Content-Type')
  meta(content='IE=edge, chrome=1' http-equiv='X-UA-Compatible')

  title Todos

  link(rel="shortcut icon" href="/favicon.png")
  link(href='/stylesheets/todos.css' rel='stylesheet')
  link(href="/font-awesome/css/font-awesome.min.css" rel="stylesheet")
  
  script(src="/bundle.js" async="async")

body
  //- h1 body
  {{if-equal _page 'index'}}
    //- h1 if
    {{view TodosView}}
      .todos-view
        header
          h1 {title}
          {{import Clock}}
        main
          form({{action submit newTodo}})
            input.entry(type="text" placeholder="What's next?" autofocus {{as input}})
            button Create
          ul
            {{for todos}}
              li
                label
                  input(type="checkbox" checked="{done!!}")
                  h2 {title}
                button.mini({{action click delete}}) Delete
        footer
          h1 {unfinishedTodos.length}
          {{if-equal todos.length 0}}
            span Nothing to do
          {{if-greater todos.length 0}}
            span {todos.length} Items left to do
